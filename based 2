
def yes_no(question):
    valid = False

    user_response = input(question).lower()
    if user_response == "yes" or user_response == "y":
        return "yes"

    elif user_response == "no" or user_response == "n":
        return "no"

    else:
        print("Please enter 'yes' or 'no'.")


