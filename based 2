# Ask user if they want see the instructions

ef string_checker(question, min_length, valid_responses):
    while True:
        user_response = input(question)
        if len(user_response) >= min_length and user_response in valid_responses:
            return user_response
        else:
            print("Invalid input. Please try again.")

